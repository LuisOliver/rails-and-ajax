<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% for project in @projects %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><%= link_to "Edit", edit_project_path(project), :remote => true %></td>
      <td><%= link_to "Destroy", project, :remote => true, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>